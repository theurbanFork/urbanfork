<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/header') %>
  </head>
  <body>
    <section class="flex-container column-flex center-flex gap30 center-flex">
      <h1>Login</h1>
      <form
        method="POST"
        class="flex-container column-flex gap10"
        id="form"
        enctype="form-data"
        action="./login"
      >
        <input type="text" name="username" placeholder="Username" required />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />

        <input type="submit" value="Login" class="button" />
      </form>
    </section>
  </body>
</html>
